<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.DiscordJetpackCompose" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@color/purple_700</item>
    </style>

    <style name="SplashTheme" parent="Theme.SplashScreen">
        <!-- Use windowSplashScreenAnimatedIcon to add either a drawable or an
             animated drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/light_app_logo</item>

        <!-- Set the theme of the Activity that directly follows your splash screen. -->
        <!-- Required -->
        <item name="postSplashScreenTheme">@style/Theme.DiscordJetpackCompose</item>
    </style>
</resources>